#!/bin/bash

#################
###### TMUX #####
#################

# Tmux create new, named sessen.  "tn vidgf"
alias tn='tmux new -s'

# Attach to named.
alias ta='tmux attach -t'

# Kill tmux session: trm vidgf
alias trm='tmux kill-session -t'
alias tkill='tmux kill-session -t'
alias tkillall='tmux ls|grep :|cut -d: -f1|xargs -n 1 tmux kill-session -t'

# List sessions.
alias tl='tmux ls'

# Create new session: tn vidgf
alias tn='tmux new -s'


# Attach by number.
alias t0='echo hmmm ... tmux ... 0?'
alias t1='tmux attach -t 1'
alias t2='tmux attach -t 2'
alias t3='tmux attach -t 3'
alias t4='tmux attach -t 4'
