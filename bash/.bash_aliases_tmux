alias t6='tmux attach -t 6'
alias t7='tmux attach -t 7'
alias t8='tmux attach -t 8'
alias t9='tmux attach -t 9'
alias t10='tmux attach -t 10'
alias t11='tmux attach -t 11'
alias t12='tmux attach -t 12'
alias t13='tmux attach -t 13'
